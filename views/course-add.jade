doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/course-add.css')
    script(src='/components/jquery/dist/jquery.min.js')
    script(src='/components/bootstrap/dist/js/bootstrap.min.js')
    script(src='/js/course-add.js')
    title
  body
    include partials/_header.jade
    form
      section.container.well.panel-primary
        h1 添加课程
        ul.list-unstyled.list-group
          li.list-group-item
            label 请输入课程名:
            input.form-control(type='text')
          li.list-group-item
            label 请选择分类:
            select.form-control
              option 英语
              option 数学
              option 语文
              option 物理
              option 生物

          li.list-group-item
            label 请输入课程简要信息
            textarea.form-control(rows='3', cols='134')


      section.container.well.panel-primary
        ul.list-unstyled.list-group
          li.list-group-item.col-md-12
            label 第1章节:
            input(type='text').form-control
          li.list-group-item.col-md-12
            label.col-md-12 上传文件:
            input(type='file', value='上传文件').col-md-2.form-control
            label.col-md-11
            input(type='button' id='update' value='上传').col-md-1.

          li.list-group
            input(type='button' id='new' onclick='addNew' value='新增').col-md-6
            input(type='button' id='delete' value='删除').col-md-6

