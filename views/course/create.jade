extends ../layout

block head
    link(rel='stylesheet', href='/stylesheets/course/course-create.css')
block content
    form(method="post" action="/management/courses/create" ).form-signin
      section.container.well.panel-primary
        h1 添加课程
        ul.list-unstyled.list-group
          li.list-group-item
            label 请输入课程名:
            input(type='text' style='width:300px' placeholder='请输入课程名' name='course_name').form-control
          li.list-group-item
            label 请选择分类:
            select(id='category_parent' style='width:300px').form-control
              option 英语
              option 数学
              option 语文

            select(id='category_child' style='width:300px').form-control

          li.list-group-item
            label 请输入课程简要信息
            textarea(rows='3' cols='134' name='course_desc' ).form-control

      section.container.well.panel-primary
        ul.list-unstyled.list-group
          li.list-group-item.col-md-12
            label(name='chapterId') 第1章节:
            input(type='text' placeholder='请输入章节名' name="chapter_name").form-control
          li.list-group-item.col-md-12
            .col-md-12 上传文件:
            input#commit_file.form-control(name='commit_file', type='file')
            .col-md-3
          li.list-group
            .col-md-10
            input(type='button' name='addBtn'  value='新增').col-md-1.btn.btn-primary.text-right.sectionbk

      div#submit.container
        input(type='submit' value='保存').col-md-1.btn.btn-primary.text-center.sectionbk

block foot
  script(src='/js/course/course-new.js')
  script(src='/components/blueimp-file-upload/js/vendor/jquery.ui.widget.js')
  script(src='/components/blueimp-file-upload/js/jquery.iframe-transport.js')
  script(src='/components/blueimp-file-upload/js/jquery.fileupload.js')
